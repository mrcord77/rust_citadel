[package]
name = "citadel-envelope"
version = "0.1.0"
edition = "2021"
rust-version = "1.74"
description = "Citadel Envelope v1: X25519 + ML-KEM-768 hybrid post-quantum encryption with AES-256-GCM"
license = "MIT OR Apache-2.0"
repository = "https://github.com/example/citadel-envelope"
keywords = ["cryptography", "post-quantum", "encryption", "ml-kem", "hybrid"]
categories = ["cryptography"]

[lib]
name = "citadel_envelope"
path = "src/lib.rs"

[dependencies]
# ML-KEM (FIPS 203) - production-grade PQ KEM
ml-kem = { version = "0.2", features = ["zeroize"] }

# X25519 ECDH - classical KEM for hybrid defense-in-depth
x25519-dalek = { version = "2", features = ["static_secrets"] }

# Symmetric cryptography
aes-gcm = { version = "0.10", features = ["aes"] }
hkdf = "0.12"
sha2 = "0.10"
sha3 = "0.10"

# Constant-time operations
subtle = "2.5"

# Secure random number generation
rand_core = { version = "0.6", features = ["getrandom"] }
getrandom = "0.2"

# Memory zeroing for sensitive data
zeroize = { version = "1.7", features = ["derive"] }

[dev-dependencies]
hex = "0.4"
proptest = "1.4"
criterion = "0.5"
rsa = "0.9"
rand = "0.8"
# Re-listed so benchmarks/examples can import these crates directly
aes-gcm = { version = "0.10", features = ["aes"] }
sha2 = "0.10"

[features]
default = []
# Deterministic mode for Known Answer Tests - NEVER use in production
kat = []
# Enable std features
std = []

[[bench]]
name = "timing"
harness = false

[[bench]]
name = "comparative"
harness = false

[[example]]
name = "demo"
required-features = ["std"]

[profile.release]
lto = true
codegen-units = 1
panic = "unwind"
