# Citadel API Server Configuration
# Copy to .env and customize:  cp .env.example .env

# Listen port (default: 3000)
CITADEL_PORT=3000

# Persistent data directory (default: ./citadel-data)
# In Docker this is /data (mounted as a volume)
CITADEL_DATA_DIR=./citadel-data

# API key for authentication (REQUIRED for production)
# All /api/* endpoints require: Authorization: Bearer <this-key>
# Leave empty to disable auth (development only)
CITADEL_API_KEY=change-me-to-a-real-secret

# Seed demo keys on first run (default: false)
# Set to "true" to auto-create a 4-level key hierarchy for testing
CITADEL_SEED_DEMO=true
